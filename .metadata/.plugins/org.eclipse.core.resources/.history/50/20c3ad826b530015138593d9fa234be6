// Leetcode 215
// Kth Largest Element in an Array
// https://leetcode.com/problems/kth-largest-element-in-an-array/

/*

Find the kth largest element in an unsorted array. Note that it is the kth 
largest element in the sorted order, not the kth distinct element.

For example,
Given [3,2,1,5,6,4] and k = 2, return 5.

Note: 
You may assume k is always valid, 1 ¡Ü k ¡Ü array's length.

*/

import java.util.*;

class ValueAndIndex {
	int value;
	int index;
	
	ValueAndIndex(int value, int index) {
		this.value = value;
		this.index = index;
	}
}

public class Solution {
    public int findKthLargest(int[] nums, int k) {
        TreeSet<ValueAndIndex> set = new TreeSet<ValueAndIndex>(new Comparator<ValueAndIndex>(){
        	public int compare(ValueAndIndex vi1, ValueAndIndex vi2) {
        		if(vi1.value != vi2.value) {
        			return vi2.value - vi1.value;
        		}
        		else {
        			return vi2.index - vi1.index;
        		}
        	}
        });
        for(int i = 0; i < nums.length; i++) {
        	set.add(new ValueAndIndex(nums[i], i));
        	if(set.size() > k) {
        		set.remove(set.last());
        	}
        }
        return set.last();        
    }
}